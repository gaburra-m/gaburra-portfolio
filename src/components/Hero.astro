---
import Button from "./Button.astro"
import IconTooltip from "./IconTooltip.astro"
import { GithubIconHero, LinkedIcon } from "./Icons"
---

<section class="flex flex-wrap-reverse md:flex-row gap-4 my-40 items-center">
  <div class="md:w-2/3 w-full">
    <h1 class="md:text-8xl text-7xl font-bold m-0 p-0">Gabriel Morales</h1>
    <p class="md:text-3xl text-2xl font-light px-1">
      <span class="font-bold text-primary">Front-End</span> Developer
    </p>
    <div class="flex gap-4 mt-6 mb-12">
      <IconTooltip
        href="https://github.com/gaburra-m"
        tooltip="Github"
        label="Visita mi perfil en Github"
      >
        <GithubIconHero />
      </IconTooltip>

      <IconTooltip
        href="https://www.linkedin.com/in/gaburra-m"
        tooltip="LinkedIn"
        label="Visita mi perfil en LinkedIn"
      >
        <LinkedIcon />
      </IconTooltip>
    </div>
    <Button down href="/CV-Gabriel.pdf" download="Gabriel Morales CV">
      Descarga mi CV
    </Button>
  </div>
  <figure class="md:w-1/3"></figure>
</section>
