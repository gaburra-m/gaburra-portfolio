---
import Button from "./Button.astro"
import { GithubIcon, LinkedIcon } from "./Icons"
---

<section class="flex flex-wrap-reverse md:flex-row gap-4 my-40 items-center">
  <div class="md:w-2/3 w-full">
    <h1 class="md:text-8xl text-7xl font-bold m-0 p-0">Gabriel Morales</h1>
    <p class="md:text-3xl text-2xl font-light px-1">
      <span class="font-bold text-primary">Front-End</span> Developer
    </p>
    <div class="flex gap-4 mt-6 mb-6">
      <a
        href="https://github.com/gaburra-m"
        target="_blank"
        class="text-white hover:text-primary transition-colors"
        ><GithubIcon w="10" h="10" /></a
      >
      <a
        href="https://www.linkedin.com/in/gaburra-m/"
        target="_blank"
        class="text-white hover:text-primary transition-colors"
        ><LinkedIcon w="10" h="10" /></a
      >
    </div>
    <Button
      down
      href="/CV-Gabriel.pdf"
      download="Gabriel Morales CV"
      class="px-4 py-3 text-center text-white border-2 border-primary hover:text-black hover:bg-primary hover:text-backg-400 transition-colors duration-150 ease-in rounded flex items-center justify-center group"
    >
      Descarga mi CV
    </Button>
  </div>
  <figure class="md:w-1/3"></figure>
</section>
