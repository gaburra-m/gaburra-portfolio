---
import Titulos from "../components/Titulos.astro"
import CardProyect from "../components/CardProyect.astro"

const proyectos = await Astro.glob("../pages/proyectos/*.md")
const { frontmatter } = Astro.props
---

<section>
  <Titulos>Ultimos Proyectos</Titulos>
  <section class="grid md:grid-cols-2 gap-8 mb-6">
    {
      proyectos
        .map((proyecto) => <CardProyect proyecto={proyecto} />)
        .reverse()
        .slice(0, 2)
    }
  </section>
  <a
    href="/proyectos"
    class="px-4 py-3 text-center text-white border-2 border-primary hover:text-black hover:bg-primary hover:text-backg-400 transition-colors duration-150 ease-in rounded flex items-center justify-center group"
  >
    Ver m√°s

    <svg
      class="w-3.5 h-3.5 ml-2 translate-x-0 group-hover:translate-x-2 duration-100 ease-in"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
    </svg>
  </a>
</section>
