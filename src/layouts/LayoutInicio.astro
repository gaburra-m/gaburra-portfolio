---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Portafolio de Gabriel Morales - Front-End developer."
    />
    <meta
      name="keywords"
      content="gabriel, morales, frontend, developer, react, javascript, html, css, astro"
    />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon" />
    <title>Gabriel Morales - {title}</title>
  </head>
  <body class="bg-backg-300 text-white mx-auto">
    <Header />
    <main class="container max-w-3xl mx-auto px-4 md:px-0 my-14">
      <slot />
    </main>
    <Footer />
  </body>
</html>
